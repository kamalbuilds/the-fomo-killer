<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 630" width="1200" height="630">
  <!-- Background Gradient -->
  <defs>
    <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1E293B;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#334155;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1E293B;stop-opacity:1" />
    </linearGradient>
    
    <pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse">
      <path d="M 50 0 L 0 0 0 50" fill="none" stroke="#334155" stroke-width="0.5" opacity="0.3"/>
    </pattern>
    
    <filter id="heroGlow">
      <feGaussianBlur stdDeviation="8" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#heroGradient)"/>
  <rect width="1200" height="630" fill="url(#grid)"/>
  
  <!-- Floating particles effect -->
  <circle cx="100" cy="100" r="2" fill="#3B82F6" opacity="0.6">
    <animate attributeName="cy" values="100;500;100" dur="10s" repeatCount="indefinite"/>
  </circle>
  <circle cx="300" cy="200" r="3" fill="#8B5CF6" opacity="0.5">
    <animate attributeName="cy" values="200;50;200" dur="8s" repeatCount="indefinite"/>
  </circle>
  <circle cx="900" cy="400" r="2" fill="#3B82F6" opacity="0.7">
    <animate attributeName="cy" values="400;100;400" dur="12s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Main Content Container -->
  <g transform="translate(600, 315)">
    <!-- Logo/Icon -->
    <g transform="scale(1.5)">
      <!-- Head -->
      <rect x="-40" y="-80" width="80" height="60" rx="10" fill="white" opacity="0.95"/>
      
      <!-- Eyes -->
      <circle cx="-15" cy="-50" r="8" fill="#3B82F6"/>
      <circle cx="15" cy="-50" r="8" fill="#3B82F6"/>
      
      <!-- Chart bars -->
      <rect x="-30" y="-10" width="10" height="30" fill="#10B981" opacity="0.9"/>
      <rect x="-15" y="-20" width="10" height="40" fill="#3B82F6" opacity="0.9"/>
      <rect x="0" y="-5" width="10" height="25" fill="#8B5CF6" opacity="0.9"/>
      <rect x="15" y="-15" width="10" height="35" fill="#F59E0B" opacity="0.9"/>
    </g>
    
    <!-- Title -->
    <text y="80" text-anchor="middle" font-family="Arial, sans-serif" font-size="72" font-weight="bold" fill="white">
      KILL-FOMO
    </text>
    
    <!-- Subtitle -->
    <text y="120" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="#94A3B8">
      AI-Powered DeFi Agents on Base
    </text>
    
    <!-- Feature badges -->
    <g transform="translate(-200, 160)">
      <rect x="-50" y="-15" width="100" height="30" rx="15" fill="#3B82F6" opacity="0.2"/>
      <text text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#3B82F6">CDP v2</text>
    </g>
    
    <g transform="translate(-60, 160)">
      <rect x="-50" y="-15" width="100" height="30" rx="15" fill="#8B5CF6" opacity="0.2"/>
      <text text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#8B5CF6">x402</text>
    </g>
    
    <g transform="translate(60, 160)">
      <rect x="-50" y="-15" width="100" height="30" rx="15" fill="#10B981" opacity="0.2"/>
      <text text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#10B981">XMTP</text>
    </g>
    
    <g transform="translate(200, 160)">
      <rect x="-50" y="-15" width="100" height="30" rx="15" fill="#F59E0B" opacity="0.2"/>
      <text text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#F59E0B">MiniKit</text>
    </g>
  </g>
  
  <!-- Launch Button -->
  <g transform="translate(600, 530)">
    <rect x="-100" y="-25" width="200" height="50" rx="25" fill="#3B82F6" filter="url(#heroGlow)"/>
    <text text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="white">
      Launch App â†’
    </text>
  </g>
</svg>