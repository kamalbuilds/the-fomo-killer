<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 375 812" width="375" height="812">
  <!-- Background -->
  <rect width="375" height="812" fill="#1E293B"/>
  
  <!-- Animated gradient overlay -->
  <defs>
    <linearGradient id="splashGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:0.3">
        <animate attributeName="stop-opacity" values="0.3;0.6;0.3" dur="3s" repeatCount="indefinite"/>
      </stop>
      <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:0.3">
        <animate attributeName="stop-opacity" values="0.3;0.6;0.3" dur="3s" repeatCount="indefinite"/>
      </stop>
    </linearGradient>
    
    <filter id="splashGlow">
      <feGaussianBlur stdDeviation="20" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <rect width="375" height="812" fill="url(#splashGradient)"/>
  
  <!-- Center Logo -->
  <g transform="translate(187.5, 406)">
    <!-- Animated pulse effect -->
    <circle cx="0" cy="-50" r="100" fill="#3B82F6" opacity="0.1" filter="url(#splashGlow)">
      <animate attributeName="r" values="100;120;100" dur="2s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.1;0.05;0.1" dur="2s" repeatCount="indefinite"/>
    </circle>
    
    <!-- Robot/AI Symbol -->
    <g transform="scale(2)">
      <!-- Head -->
      <rect x="-30" y="-60" width="60" height="45" rx="8" fill="white" opacity="0.95"/>
      
      <!-- Eyes with glow -->
      <circle cx="-12" cy="-40" r="6" fill="#3B82F6" filter="url(#splashGlow)"/>
      <circle cx="12" cy="-40" r="6" fill="#3B82F6" filter="url(#splashGlow)"/>
      
      <!-- Antenna with pulse -->
      <line x1="0" y1="-60" x2="0" y2="-75" stroke="white" stroke-width="3" stroke-linecap="round"/>
      <circle cx="0" cy="-78" r="4" fill="white">
        <animate attributeName="r" values="4;6;4" dur="1s" repeatCount="indefinite"/>
      </circle>
      
      <!-- Chart bars -->
      <rect x="-20" y="-10" width="8" height="20" fill="white" opacity="0.8"/>
      <rect x="-10" y="-15" width="8" height="25" fill="white" opacity="0.8"/>
      <rect x="0" y="-8" width="8" height="18" fill="white" opacity="0.8"/>
      <rect x="10" y="-12" width="8" height="22" fill="white" opacity="0.8"/>
    </g>
    
    <!-- App Name -->
    <text y="60" text-anchor="middle" font-family="Arial, sans-serif" font-size="36" font-weight="bold" fill="white">
      KILL-FOMO
    </text>
    
    <!-- Tagline -->
    <text y="90" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#94A3B8">
      AI DeFi Agents on Base
    </text>
    
    <!-- Loading indicator -->
    <g transform="translate(0, 140)">
      <rect x="-60" y="-2" width="120" height="4" rx="2" fill="#334155"/>
      <rect x="-60" y="-2" width="40" height="4" rx="2" fill="#3B82F6">
        <animate attributeName="width" values="0;120;0" dur="2s" repeatCount="indefinite"/>
      </rect>
    </g>
    
    <!-- Powered by text -->
    <text y="200" text-anchor="middle" font-family="Arial, sans-serif" font-size="11" fill="#64748B">
      Powered by CDP × MiniKit × x402
    </text>
  </g>
</svg>